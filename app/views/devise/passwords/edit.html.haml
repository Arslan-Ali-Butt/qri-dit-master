= tenant_page_title 'Reset password'
.row
  .login-box
    = render 'layouts/tenant/flash_message'
    = render 'devise/shared/error_messages'

    %h2 Change your password
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f|
      %fieldset
        = f.hidden_field :reset_password_token
        = f.password_field :password, class: 'input-large col-xs-12', autofocus: true, placeholder: 'New password', required: ''
        = f.password_field :password_confirmation, class: 'input-large col-xs-12', placeholder: 'Confirm new password', required: ''
        .clearfix

        = f.button 'Change my password', name: nil, type: 'submit', class: 'btn btn-primary col-xs-12'

    %hr
    = render 'devise/shared/links'
