%form{action: tenant_time_index_url, method: :get, class: 'form-horizontal well no-print', role: 'form'}
  .row
    .col-sm-6
      .form-group
        = label_tag :staff_zone_id, 'Base Zone', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :staff_zone_id, options_from_collection_for_select(Tenant::Zone.order(:name), :id, :name, @staff_zone_id), prompt: 'All', class: 'form-control selectize-time-zone'
    .col-sm-6
      .form-group
        = label_tag :id, 'Reporter Name', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :id, options_from_collection_for_select(Tenant::Staff.by_role('Reporter').active.order(:name), :id, :name, @id), prompt: 'Select Reporter(s)', class: 'form-control selectize-time-reporter'
      .form-group.form-actions
        .col-sm-offset-9.col-sm-3
          = button_tag 'Filter', name: nil, type: 'submit', class: 'btn btn-primary pull-right'
