<% page_title = case controller_name
    when 'users'      then 'Staff Detail'
    when 'clients'    then 'Client Detail'
    when 'sites'      then 'Site Detail'
    else "Edit #{@resource.respond_to?(:display_name) ? @resource.display_name : 'resource'}"
  end %>

$('#myModal').html('<%= escape_javascript(render('modal_form', page_title: page_title, resource: @resource)) %>');
$('#myModal').modal('show');
