%form{method: :get, class: 'form-horizontal well no-print', role: 'form'}
  .row
    .col-sm-6
      .form-group
        = label_tag :status, 'Status', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :status, options_for_select(Tenant::User::STATUSES, @status), multiple: true, class: 'form-control selectize'
      .form-group
        = label_tag :client_type, 'Client Type', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :client_type, options_for_select(Tenant::Client::CLIENT_TYPES, @client_type), prompt: 'All', class: 'form-control selectize funnel'
      .form-group
        = label_tag :id, 'Client', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :id, options_from_collection_for_select(Tenant::Client.by_role('Client').active.order(:name), :id, :name, @id), prompt: 'All', class: 'form-control selectize-client-id funnel'
      .form-group
        = label_tag :site_id, 'Site', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :site_id, options_from_collection_for_select(Tenant::Site.active.order(:name), :id, :name, @site_id), prompt: 'All', class: 'form-control selectize-site-id'
    .col-sm-6
      .form-group
        = label_tag :city, 'City', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :city, options_from_collection_for_select(Tenant::Address.where(addressable_type: 'Tenant::Site').order(:city), :city, :city, @city), prompt: 'All', class: 'form-control selectize'
      .form-group
        = label_tag :zone_id, 'Zone', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :zone_id, options_from_collection_for_select(Tenant::Zone.order(:name), :id, :name, @zone_id), prompt: 'All', class: 'form-control selectize'
      .form-group
        = label_tag :qrid_id, 'QRID', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :qrid_id, options_from_collection_for_select(Tenant::Qrid.active.order(:name), :id, :name, @qrid_id), prompt: 'All', class: 'form-control selectize'
      .form-group
        = label_tag :work_type_id, 'Work Type', class: 'col-sm-4 control-label'
        .col-sm-8
          = select_tag :work_type_id, options_from_collection_for_select(Tenant::WorkType.order(:name), :id, :name, @work_type_id), prompt: 'All', class: 'form-control selectize'
      .form-group.form-actions
        .col-sm-offset-9.col-sm-3
          = button_tag 'Filter', name: nil, type: 'submit', class: 'btn btn-primary pull-right'
