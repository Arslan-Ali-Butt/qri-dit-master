%form{method: :get, class: 'form-horizontal well no-print', role: 'form'}
  .row
    .col-sm-6
      .form-group
        = label_tag :id, 'Site', class: 'col-sm-2 control-label'
        .col-sm-10
          = select_tag :id, options_from_collection_for_select(Tenant::Site.active.where(owner_id: @owner_id).order(:name), :id, :name, @id), prompt: 'All', class: 'form-control selectize'

    .col-sm-6
      .form-group.form-actions
        .col-sm-offset-9.col-sm-3
          = button_tag 'Filter', name: nil, type: 'submit', class: 'btn btn-primary pull-right'
