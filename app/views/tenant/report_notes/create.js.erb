$('#myModal').modal('hide');
$('<%= escape_javascript(render('layouts/tenant/flash_message')) %>').appendTo('#flash').hide().fadeIn().delay(3000).fadeOut();

$('.media-list.no-comments').hide();
<% reception_note = (params[:confirmation] == "true" ? @resource : nil) %>
<% submission_note = (params[:submission] == "true" ? @resource : nil) %>
$('<%= escape_javascript(render('resource', resource: @resource, submission_note: submission_note, reception_note: reception_note)) %>').prependTo('.<%= @resource.class.name.demodulize.downcase %>-collection<%= @resource.respond_to?(:collection_id) ? "#collection_#{@resource.collection_id}" : '' %>').hide().fadeIn();

$('#submit_button').text('Add New Comment').attr('href', '<%= new_tenant_report_note_url(report_id: @resource.report.id, send_to: params[:send_to]) %>');
