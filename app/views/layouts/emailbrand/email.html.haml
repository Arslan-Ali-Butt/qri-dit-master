!!!
%html
  %head
  %body{:style => "width: 100%; margin: 0; padding: 0;"}
    %table{:style => "width: 100%", :border => 0, :cellpadding => 0, :cellspacing => 0}
      %tr
        %td{:align => "center"}
          %center
            %table{:style => "border-spacing: 0px;"}
              %tr
                %td{:align => "center", :width => "600"}
                  %center
                    %h1{:style => "color: #2EB4BF; font-size: 32pt; text-align: center; font-weight: bold; font-family: 'Arial Regular', Arial, Helvetica, sans-serif; padding: 0px 10px; margin: 0"}= yield(:header)
              %tr
                %td{:width => "600", :style => "padding-bottom: 24px;"}
                  %p{:style => "font-family: 'Times New Roman', Times, serif; padding: 10px;"}= yield

              %tr{:style => "padding-bottom: 0px;"}
                %td{:align => "right", :style => "padding: 0; margin: 0; padding-bottom: 10px; padding-left: 10px; padding-right: 10px;", :width => "600"}
                  %center
                    - if !(defined? @omitFooter && !Admin::Tenant.find(Apartment::Database.current_tenant.match(/\d+/).to_s.to_i).is_affiliate?)
                      =image_tag(attachments['bannerLogo.png'].url, width: 580, height: 100)


